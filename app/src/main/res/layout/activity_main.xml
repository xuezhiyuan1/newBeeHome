<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/network"
    tools:context="com.yunjing.newbeehome.activity.MainActivity">

    <ImageView
        android:id="@+id/goneImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:background="@drawable/welcome"/>


    <ImageView
        android:id="@+id/image"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativeAd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/bee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:layout_alignTop="@+id/goTo"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />


        <ImageView
            android:id="@+id/goTo"
            android:layout_toRightOf="@+id/bee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="34dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>


</LinearLayout>
